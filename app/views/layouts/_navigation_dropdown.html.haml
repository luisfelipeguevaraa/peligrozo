- if current_user
  %li.dropdown
    %a.dropdown-toggle{"data-toggle" => "dropdown", href: "#"}
      = current_user.name
      %span.caret
    %ul.dropdown-menu{role: "menu"}
      %li
        =link_to "TUS CINES", "#"
      %li
        =link_to "PELI PALS", "#"
      %li
        =link_to "GENEROS", favorite_genres_user_path(current_user)
      %li
        =link_to "ADMIN", admins_index_path
      %li
        =link_to "LANDING", landing_index_path
      %li.divider
      %li
        = link_to "CERRAR SESION", signout_path, id: "sign_out"
- else
  = link_to "Sign in with Facebook", "/auth/facebook", id: "sign_in", class: "btn btn-primary"