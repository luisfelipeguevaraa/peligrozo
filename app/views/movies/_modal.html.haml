.movie-details.modal.fade
  .modal-dialog
    .message_watchlist
      =image_tag "icon_menssage_watchlist.png"
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        =link_to "#", id: "link_boton_back_video" do
          =image_tag "boton_back_video.png", class: "boton-back-video"
        %h4.modal-title= @movie.name
      .modal-row-details.modal-body.row
        .col-sm-4
          .modal-poster
            -if @movie.trailer?
              %a{:href => "#", id:"play-trailer"}
                =image_tag "trailer_play.png", class: "btn-trailer-play hidden-xs"
            .modal-poster-img
              =image_tag @movie.poster_path, class: "poster-modal hidden-xs"
        .col-sm-8
          .modal-overview
            =@movie.overview
          %h5 TUS CINES
          .modal-theaters
            = select_tag "movie-theaters", select_theater_options(@favorite_theaters, @movie.theaters, @disabled), class: "form-control select-movie-theater", "data-movie-id"=> @movie.id
          %h5 HORARIOS
          .modal-schedules
            = @schedule.description
          .modal-options
            =link_to "#", id:"button_add_watchlist", class: "pull-right" do
              =image_tag "boton_watchlist.png"
            =link_to "#", id:"button_delete_watchlist", class: "btn btn-default pull-right" do
              Watchlist -
      .modal-row-trailer.modal-body.modal-body-padding.row
        .modal-trailer.col-sm-12
          -if @movie.trailer?
            %iframe{:allowfullscreen => "", :frameborder => "0", :height => "419", :src => "http://www.youtube.com/embed/#{@movie.trailer}", :width => "598"}