.modal.fade.movie-details
  .modal-dialog
    .message_watchlist
      =image_tag "icon_menssage_watchlist.png"
    .modal-content
      .modal-header
        %button.close{"data-dismiss" => "modal", type: "button"}
          %span{"aria-hidden" => "true"} Ã—
          %span.sr-only Close
        =link_to "#", id: "link_boton_back_video" do
          =image_tag "boton_back_video.png", class: "boton_back_video"
        %h4.modal-title Modal title

      .modal-body.row.modal-row-details
        .col-sm-4
          .modal-poster
            %a{:href => "#", id:"play-trailer"}
              =image_tag "trailer_play.png", class: "btn-trailer-play hidden-xs"
            .modal-poster-img
        .col-sm-8
          .modal-overview
          %h5 TUS CINES
          .modal-theaters
            %select{:name => "movie-theaters", class: "form-control select-movie-theater"}
          %h5 HORARIOS
          .modal-schedules
          .modal-options
            =link_to "#", id:"button_add_watchlist", class: "pull-right" do
              =image_tag "boton_watchlist.png"
      
      .modal-body.modal-body-padding.row.modal-row-trailer
        .modal-trailer.col-sm-12
