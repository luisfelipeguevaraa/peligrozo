.container-fluid.white-background
  .row-fluid
    - if @steps
      .steps.col-sm-6.col-sm-offset-3
        = image_tag "step/2.png"
    .col-sm-6.col-sm-offset-3.header-title
      %h3 HISTORIAL
      %h2
        %small 
      %hr/
      .row
        .col-sm-12
          - @watchlist.each do |user_fav_movie|
            - if user_fav_movie.movie.present?
              .history-movie
                .poster
                  = image_tag user_fav_movie.movie.poster_path
                .description
                  %p
                    = image_tag "asd", width:"15px"
                    %span.created_at= user_fav_movie.movie.created_at.to_date
                    Agrego a
                    %span.action Watchlist

                  %p
                    = image_tag "asd", width:"15px"
                    Accion